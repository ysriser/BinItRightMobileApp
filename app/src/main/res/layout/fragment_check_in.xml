<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/btnBackToHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back to home"
                app:tint="#2E7D32"/>

            <TextView
                android:text="Check-in (Record Video)"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginStart="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Items Counter Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="How many items are you recycling?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <!-- Minus Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecrease"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="-"
                        android:textSize="24sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#E8F5E9"
                        android:textColor="#2E7D32"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <!-- Counter Display -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/counter_bg"
                        android:padding="16dp"
                        android:layout_marginHorizontal="16dp">

                        <TextView
                            android:id="@+id/tvItemCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="items"
                            android:textSize="14sp"
                            android:textColor="#66BB6A"/>

                    </LinearLayout>

                    <!-- Plus Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIncrease"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="+"
                        android:textSize="24sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#2E7D32"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Item Description Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="What are you recycling?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., Plastic bottles, Paper"
                    app:boxStrokeColor="#2E7D32"
                    app:hintTextColor="#2E7D32"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etItemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:maxLines="2"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Item Type Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="Item Type"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cgItemType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="false"
                    app:chipSpacingHorizontal="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPlastic"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plastic"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="#2E7D32"
                        app:chipStrokeWidth="1dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPaper"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paper"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="#2E7D32"
                        app:chipStrokeWidth="1dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipGlass"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glass"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="#2E7D32"
                        app:chipStrokeWidth="1dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMetal"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metal"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="#2E7D32"
                        app:chipStrokeWidth="1dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipEWaste"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-Waste"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="#2E7D32"
                        app:chipStrokeWidth="1dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLighting"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lighting"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="#2E7D32"
                        app:chipStrokeWidth="1dp"/>

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Video Recording Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRecordVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_videocam_24"
                    app:tint="#2E7D32"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:text="Show us your items being recycled"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecordVideo"
                    android:layout_width="200dp"
                    android:layout_height="56dp"
                    android:text="Record Video"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_videocam_24"
                    app:iconGravity="start"
                    app:iconSize="24dp"
                    android:backgroundTint="#F44336"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Location Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location_on_24"
                        app:tint="#1976D2"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:text="Recycling at:"
                        android:textSize="12sp"
                        android:textColor="#1565C0"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvLocationName"
                    android:text="Green Earth Recycling Center"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvLocationAddress"
                    android:text="123 Eco Street"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Status Message -->
        <TextView
            android:id="@+id/tvStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="#388E3C"
            android:visibility="gone"
            android:gravity="center"
            android:padding="12dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackHome"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="Back to Home"
                android:textSize="15sp"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_home"
                app:iconGravity="start"
                android:backgroundTint="#757575"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="Submit"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_check_circle_24"
                app:iconGravity="start"
                android:backgroundTint="#F44336"
                android:enabled="false"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>