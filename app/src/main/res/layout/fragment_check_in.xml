<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/btnBackToHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back to home"
                app:tint="#2E7D32"/>

            <TextView
                android:text="@string/checkin_title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginStart="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Items Counter Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="@string/checkin_items_prompt"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <!-- Minus Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecrease"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="-"
                        android:textSize="24sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#E8F5E9"
                        android:textColor="#2E7D32"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <!-- Counter Display -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/counter_bg"
                        android:padding="16dp"
                        android:layout_marginHorizontal="16dp">

                        <TextView
                            android:id="@+id/tvItemCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checkin_items_label"
                            android:textSize="14sp"
                            android:textColor="#66BB6A"/>

                    </LinearLayout>

                    <!-- Plus Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIncrease"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="+"
                        android:textSize="24sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#2E7D32"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPendingReviewHint"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#FFF8E1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:text=""
                    android:textColor="#8D6E63"
                    android:textSize="12sp" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Item Type Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="@string/checkin_item_type"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cgItemType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="false"
                    app:chipSpacingHorizontal="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPlastic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plastic"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPaper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paper"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipGlass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glass"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMetal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metal"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipEWaste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-Waste"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLighting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lighting"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipOthers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Others"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>
                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Video Recording Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRecordVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_videocam_24"
                    app:tint="#2E7D32"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:text="@string/checkin_video_prompt"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvVideoGuidance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    android:text="@string/checkin_video_min_duration_hint"
                    android:textColor="#616161"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvVideoRecordedStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_status_chip"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text=""
                    android:textColor="#1B5E20"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecordVideo"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/checkin_record_video"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAllCaps="false"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_videocam_24"
                    app:iconGravity="start"
                    app:iconSize="24dp"
                    android:backgroundTint="#F44336"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Location Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location_on_24"
                        app:tint="#1976D2"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:text="@string/checkin_recycling_at"
                        android:textSize="12sp"
                        android:textColor="#1565C0"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvLocationName"
                    android:text="Green Earth Recycling Center"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvLocationAddress"
                    android:text="123 Eco Street"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Status Message -->
        <TextView
            android:id="@+id/tvStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="#388E3C"
            android:visibility="gone"
            android:gravity="center"
            android:padding="12dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:contentDescription="submit_checkin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="@string/action_submit"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_check_circle_24"
                app:iconGravity="start"
                android:enabled="true"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
