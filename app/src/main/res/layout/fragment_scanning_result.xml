<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true"
    tools:context=".ScanningResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="32dp">

        <!-- Captured Image Thumbnail (Optional -->
        <ImageView
            android:id="@+id/ivCapturedImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:alpha="0.2"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <!-- Gradient Fade Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_gradient_fade"
            app:layout_constraintBottom_toBottomOf="@id/ivCapturedImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



        <!-- Green Check Circle -->
        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_check_circle_24"
            app:tint="#00C853"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivCapturedImage" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Electronics"
            android:textColor="#212121"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivSuccess" />

        <TextView
            android:id="@+id/tvBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_badge_recyclable"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="Recyclable"
            android:textColor="#00695C"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCategory" />

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="#E8F5E9"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBadge">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvDescriptionWait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Great news! This item can be recycled."
                    android:textColor="#1B5E20"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Recycling this item helps reduce waste and conserve natural resources. Would you like to proceed with recycling?"
                    android:textColor="#2E7D32"
                    android:lineSpacingExtra="4dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvInstructionTitle"
                            android:text="How to dispose:"
                            android:textStyle="bold"
                            android:textColor="#424242"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="4dp"
                             android:id="@+id/tvInstructionSteps"
                             android:text="1. Follow local disposal guidance"
                             android:textColor="#616161"
                             android:lineSpacingExtra="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecycle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#00C853"
            android:text="Yes, I want to recycle this"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardInfo" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScanAgain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="#2962FF"
            android:text="Scan Another Item"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_camera_alt_24"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRecycle" />

        <TextView
            android:id="@+id/btnNotNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Not now"
            android:textSize="16sp"
            android:textColor="#757575"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnScanAgain" />

        <!-- Loading Overlay -->
        <FrameLayout
            android:id="@+id/flLoadingOverlay"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/ivCapturedImage"
            app:layout_constraintBottom_toBottomOf="@+id/ivCapturedImage">
            
            <!-- Semi-transparent dimmer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000" />
            
            <!-- Scan Line -->
            <View
                android:id="@+id/scanLine"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#00C853"
                android:alpha="0.8"
                android:layout_gravity="start"/>

            <!-- Progress Text -->
             <TextView
                android:id="@+id/tvScanProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Identifying..."
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
