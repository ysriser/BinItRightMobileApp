<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/nav_home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
    android:id="@+id/nav_home"
    android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.HomeFragment"
    android:label="Home"
    tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_home_to_scanHome"
            app:destination="@id/scanHomeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_home_to_scanItem"
            app:destination="@id/scanItemFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_home_to_questionnaire"
            app:destination="@id/questionnaireFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_home_to_findRecyclingBinFragment"
            app:destination="@id/findRecyclingBinFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_findRecyclingBinFragment_to_homeFragment"
            app:destination="@id/nav_home" />

    </fragment>

    <fragment
        android:id="@+id/nav_news"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.NewsFragment"
        android:label="News">
        <action
            android:id="@+id/action_nav_news_to_newsDetailFragment"
            app:destination="@id/newsDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.NewsDetailFragment"
        android:label="Article Details"
        tools:layout="@layout/fragment_news_detail">
        <argument
            android:name="newsId"
            app:argType="long" />
    </fragment>


    <fragment
        android:id="@+id/nav_events"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.EventsFragment"
        android:label="Events" />

    <fragment
        android:id="@+id/nav_games"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.GamesFragment"
        android:label="Games" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.ProfileFragment"
        android:label="Profile" />

    <fragment
        android:id="@+id/scanHomeFragment"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.ScanHomeFragment"
        android:label="ScanHome"
        tools:layout="@layout/fragment_scan_home">
        <action
            android:id="@+id/action_scanHomeFragment_to_scanItemFragment"
            app:destination="@id/scanItemFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_scanHomeFragment_to_questionnaireFragment"
            app:destination="@id/questionnaireFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_scanHomeFragment_to_nearByBinFragment"
            app:destination="@id/nearByBinFragment" />
    </fragment>

    <fragment
        android:id="@+id/scanItemFragment"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.ScanItemFragment"
        android:label="Scan Item"
        tools:layout="@layout/fragment_scan_item">
        <action
            android:id="@+id/action_scanItemFragment_to_scanningResultFragment"
            app:destination="@id/scanningResultFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/scanningResultFragment"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.ScanningResultFragment"
        android:label="Scanning Result"
        tools:layout="@layout/fragment_scanning_result">

        <action
            android:id="@+id/action_scanningResultFragment_to_nearbyBinFragment"
            app:destination="@id/nearByBinFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/questionnaireFragment"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.QuestionnaireFragment"
        android:label="Questionnaire"
        tools:layout="@layout/fragment_questionnaire">
        <action
            android:id="@+id/action_questionnaireFragment_to_questionnaireResultFragment"
            app:destination="@id/questionnaireResultFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/questionnaireResultFragment"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.QuestionnaireResultFragment"
        android:label="Result"
        tools:layout="@layout/fragment_questionnaire_result">
        <action
            android:id="@+id/action_questionnaireResultFragment_to_scanItemFragment"
            app:destination="@id/scanItemFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_questionnaireResultFragment_to_nearbyBinFragment"
            app:destination="@id/nearByBinFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/nearByBinFragment"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.NearByBinFragment"
        android:label="Nearby Bins"
        tools:layout="@layout/fragment_near_by_bin" >
        <action
            android:id="@+id/action_nearByBinFragment_to_checkInFragment"
            app:destination="@id/checkInFragment" />
    </fragment>

    <fragment
        android:id="@+id/findRecyclingBinFragment"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.FindRecyclingBinFragment"
        android:label="Find Recycling Bins"
        tools:layout="@layout/fragment_find_recycling_bin" />

    <fragment
        android:id="@+id/checkInFragment"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.CheckInFragment"
        android:label="Check In">

        <action
            android:id="@+id/action_checkIn_to_videoRecord"
            app:destination="@id/videoRecordFragment" />

        <action
            android:id="@+id/action_checkInFragment_to_homeFragment"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/videoRecordFragment"
        android:name="iss.nus.edu.sg.webviews.binitrightmobileapp.VideoRecordFragment"
        android:label="Record Video" />

</navigation>